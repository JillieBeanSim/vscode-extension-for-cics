{
	"name": "cics-extension-for-zowe",
	"displayName": "CICSExtensionForZowe",
	"description": "Extension to the Zowe Explorer for CICS",
	"publisher": "Zowe",
	"repository": {
		"url": "https://github.com/zowe/vscode-extension-for-cics"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cics-extension-for-zowe.addSession",
		"onView:cics-view"
	],
	"extensionDependencies": [
		"zowe.vscode-extension-for-zowe"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "cics-view",
				"contents": "No CICS Sessions Found.\n[Add Session](command:cics-extension-for-zowe.addSession)"
			}
		],
		"views": {
			"zowe": [
				{
					"id": "cics-view",
					"name": "cics"
				}
			]
		},
		"commands": [
			{
				"command": "cics-extension-for-zowe.addSession",
				"title": "Create a CICS Session",
				"icon": {
					"light": "resources/imgs/plus-dark.svg",
					"dark": "resources/imgs/plus-light.svg"
				}
			},
			{
				"command": "cics-extension-for-zowe.newCopyProgram",
				"title": "New Copy",
				"icon": {
					"light": "resources/imgs/copy-dark.svg",
					"dark": "resources/imgs/copy-light.svg"
				}
			},
			{
				"command": "cics-extension-for-zowe.refreshTree",
				"title": "Refresh",
				"icon": {
					"light": "resources/imgs/refresh-dark.svg",
					"dark": "resources/imgs/refresh-light.svg"
				}
			},
			{
				"command": "cics-extension-for-zowe.showAttributes",
				"title": "Show Attributes"
			},
			{
				"command": "cics-extension-for-zowe.showRegionAttributes",
				"title": "Show Attributes"
			},
			{
				"command": "cics-extension-for-zowe.phaseInCommand",
				"title": "Phase In",
				"icon": {
					"light": "resources/imgs/phase-dark.svg",
					"dark": "resources/imgs/phase-light.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "cics-extension-for-zowe.refreshTree",
					"when": "view == cics-view",
					"group": "navigation"
				},
				{
					"command": "cics-extension-for-zowe.addSession",
					"when": "view == cics-view",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"when": "view == cics-view && viewItem =~ /^cicsprogram.*/",
					"command": "cics-extension-for-zowe.newCopyProgram",
					"group": "inline"
				},
				{
					"when": "view == cics-view && viewItem =~ /^cicsprogram.*/",
					"command": "cics-extension-for-zowe.newCopyProgram",
					"group": ""
				},
				{
					"when": "view == cics-view && viewItem =~ /^cicsprogram.*/",
					"command": "cics-extension-for-zowe.phaseInCommand",
					"group": "inline"
				},
				{
					"when": "view == cics-view && viewItem =~ /^cicsprogram.*/",
					"command": "cics-extension-for-zowe.phaseInCommand",
					"group": ""
				},
				{
					"when": "view == cics-view && viewItem =~ /^cicsregion.*/",
					"command": "cics-extension-for-zowe.showRegionAttributes",
					"group": ""
				},
				{
					"when": "view == cics-view && viewItem =~ /^cicsprogram.*/",
					"command": "cics-extension-for-zowe.showAttributes",
					"group": ""
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@zowe/cics-for-zowe-cli": "^4.0.2",
		"@zowe/cli": "^6.30.0",
		"@zowe/imperative": "^4.8.1",
		"@zowe/zowe-explorer-api": "^1.13.1",
		"vscode-nls": "^5.0.0"
	}
}
